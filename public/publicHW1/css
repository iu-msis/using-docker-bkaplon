/* retrieved link options from https://www.w3schools.com/css/css_link.asp */

  /* unvisited link */
a:link {
  color: red;
}

/* visited link */
a:visited {
  color: green;
}

/* mouse over link */
a:hover {
  color: hotpink;
}

/* selected link */
a:active {
  color: rgb(153, 161, 0);
}

